@model SafetySesh.Web.Data.SafetyDiscussion
@{
    ViewBag.Title = "Add";
}

<h2>@ViewBag.Title</h2>

<div class="form-horizontal">
    @using (Html.BeginForm("Add", "SafetyDiscussion", FormMethod.Post))
    {
        <div class="form-group">
            @Html.LabelFor(m => m.Collegue, new { @class = "control-label col-xs-2" })
            @Html.TextBoxFor(m => m.Collegue, new { @class = "form-control col-xs-6" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Location, new { @class = "control-label col-xs-2" })
            @Html.TextBoxFor(m => m.Location, new { @class = "form-control col-xs-6" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Subject, new { @class = "control-label col-xs-2" })
            @Html.TextBoxFor(m => m.Subject, new { @class = "form-control col-xs-6" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Outcomes, new { @class = "control-label col-xs-2" })
            @Html.TextAreaFor(m => m.Outcomes, new { @class = "form-control col-xs-6", rows = 5 })
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary col-sm-offset-2">Submit</button>
        </div>
    }
</div>